<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/darkBlue">

    <TextView
        android:id="@+id/player1NameTextViewPairDetailActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/player_1_name"
        android:textSize="20sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/player1WinsTextViewPairDetailActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/player2NameTextViewPairDetailActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/player_1_name"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/player2WinsTextViewPairDetailActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:gravity="center"/>

</LinearLayout>